{
  "type": "json_schema",
  "schema": {
    "type": "object",
    "properties": {
      "systemPurpose": {
        "type": "string",
        "description": "High-level purpose of this system"
      },
      "domain": {
        "type": "string",
        "enum": ["voting", "token", "crowdfunding", "marketplace", "game", "defi", "governance", "other"],
        "description": "Primary domain classification"
      },
      "entities": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "identity": { "type": "string" },
            "properties": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "type": { "type": "string" },
                  "description": { "type": "string" },
                  "maxBytes": { "type": "integer" },
                  "optional": { "type": "boolean" },
                  "initialValue": { "type": "string" }
                },
                "required": ["name", "type", "description"],
                "additionalProperties": false
              }
            },
            "lifecycle": { "type": "array", "items": { "type": "string" } },
            "mutable": { "type": "boolean" },
            "cardinality": { "type": "string" },
            "cardinalityLimit": { "type": ["integer", "null"] }
          },
          "required": ["name", "description", "identity", "properties", "lifecycle", "mutable", "cardinality"],
          "additionalProperties": false
        }
      },
      "transitions": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "participants": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "entity": { "type": "string" },
                  "role": { "type": "string" },
                  "fromState": { "type": "string" },
                  "toState": { "type": "string" },
                  "consumed": { "type": "boolean" },
                  "created": { "type": "boolean" },
                  "propertyChanges": { "type": "string" }
                },
                "required": ["entity", "role"],
                "additionalProperties": false
              }
            },
            "effects": { "type": "array", "items": { "type": "string" } },
            "authorization": { "type": "string" },
            "preconditions": { "type": "array", "items": { "type": "string" } },
            "postconditions": { "type": "array", "items": { "type": "string" } },
            "timeConstraints": { "type": "string" }
          },
          "required": ["name", "description", "participants", "effects", "authorization", "preconditions", "postconditions"],
          "additionalProperties": false
        }
      },
      "invariants": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "scope": { "type": "string" },
            "scopeTarget": { "type": "string" },
            "rule": { "type": "string" },
            "description": { "type": "string" },
            "severity": { "type": "string" }
          },
          "required": ["scope", "rule", "severity"],
          "additionalProperties": false
        }
      },
      "relationships": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "from": { "type": "string" },
            "to": { "type": "string" },
            "cardinality": { "type": "string" },
            "via": { "type": "string" },
            "bidirectional": { "type": "boolean" },
            "description": { "type": "string" }
          },
          "required": ["type", "from", "to", "cardinality", "description"],
          "additionalProperties": false
        }
      },
      "roles": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "assignment": { "type": "string" },
            "canAuthorize": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["name", "description", "assignment", "canAuthorize"],
          "additionalProperties": false
        }
      },
      "unmappedConcepts": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Any concepts that could not be cleanly mapped"
      }
    },
    "required": ["systemPurpose", "domain", "entities", "transitions", "invariants", "relationships", "roles"],
    "additionalProperties": false
  }
}
